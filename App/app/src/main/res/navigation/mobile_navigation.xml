<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- Entrant Main Fragment -->
    <fragment android:id="@+id/navigation_home"
        android:name="com.example.haboob.ui.home.EntrantMainFragment"
        android:label="Main Entrant"
        tools:layout="@layout/entrant_main">
        <action
            android:id="@+id/action_mainEntrantView___to___EventView"
            app:destination="@id/entrant_event_view" />
    </fragment>

    <!-- Entrant Event Viewer Fragment -->
    <fragment android:id="@+id/entrant_event_view"
        android:name="com.example.haboob.ui.home.EventViewerFragment"
        android:label="Entrant Event Viewer"
        tools:layout="@layout/entrant_event_view">
    </fragment>
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.haboob.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.haboob.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

</navigation>