<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventDetailRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.home.EntrantMainFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="24dp"
        android:background="?attr/colorSurface"
        app:menu="@menu/menu_event_detail"
        app:title="Bob Ross Painting Class"
        app:titleCentered="false"
        app:titleTextColor="@android:color/black" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="?attr/actionBarSize">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            android:paddingTop="24dp">

            <ImageView
                android:id="@+id/heroImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/title_home"
                android:scaleType="centerCrop"
                android:src="@drawable/bob_ross"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/registrationStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Registration Start Date:"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/heroImage"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/valueRegistrationStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Placeholder Start"
                android:textSize="14sp"
                android:gravity="end"
                app:layout_constraintBaseline_toBaselineOf="@id/registrationStart"
                app:layout_constraintStart_toEndOf="@id/registrationStart"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/registrationEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Registration End Date:"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/valueRegistrationStart"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/valueRegistrationEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Placeholder End"
                android:textSize="14sp"
                android:gravity="end"
                app:layout_constraintBaseline_toBaselineOf="@id/registrationEnd"
                app:layout_constraintStart_toEndOf="@id/registrationEnd"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/eventDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Event Details:"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/valueRegistrationEnd"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/valueEventDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Placeholder Details â€” this is a long description example to demonstrate wrapping."
                android:textSize="14sp"
                android:gravity="end"
                app:layout_constraintBaseline_toBaselineOf="@id/eventDetails"
                app:layout_constraintStart_toEndOf="@id/eventDetails"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/labelAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Current Waitlist Size:"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/valueEventDetails"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/valueAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Placeholder Lottery Amount"
                android:textSize="14sp"
                android:gravity="end"
                app:layout_constraintBaseline_toBaselineOf="@id/labelAmount"
                app:layout_constraintStart_toEndOf="@id/labelAmount"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/labelNewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Waitlist Capacity:"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/valueAmount"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textNewInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Placeholder Limit"
                android:textSize="14sp"
                android:gravity="end"
                app:layout_constraintBaseline_toBaselineOf="@id/labelNewInfo"
                app:layout_constraintStart_toEndOf="@id/labelNewInfo"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/userWaitListStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Waitlist Status"
                android:textSize="14sp"
                android:textStyle="italic"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/textNewInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Buttons remain untouched -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAcceptEventInvite"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Accept Event Invitation"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/userWaitListStatus"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:backgroundTint="#35C759" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeclineEventInvite"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Decline Invitation"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:visibility="gone"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/leaving_red"
                app:layout_constraintTop_toBottomOf="@id/btnAcceptEventInvite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAcceptWaitlistInvite"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Join Waitlist"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnDeclineEventInvite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLeaveEvent"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Leave Event"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="#BF1D2A"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnAcceptWaitlistInvite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLeaveWaitlist"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:text="Leave Waitlist"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:backgroundTint="#BF1D2A"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnLeaveEvent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewQRCode"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:text="Share This Event!"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnLeaveWaitlist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:backgroundTint="@android:color/black"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="0dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/btnViewQRCode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
