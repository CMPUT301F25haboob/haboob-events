<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventDetailRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.home.EntrantMainFragment">

    <!-- Scrollable content -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:menu="@menu/menu_event_detail"
        app:title="Bob Ross Painting Class"
        app:titleCentered="false"
        app:titleTextColor="@android:color/black" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginTop="?attr/actionBarSize">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="16dp"
            android:paddingTop="24dp">>

            <!-- Hero image -->
            <ImageView
                android:id="@+id/heroImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="16:9"
                android:contentDescription="@string/title_home"
                android:src="@drawable/bob_ross" />


            <!-- Date + Time -->
            <TextView
                android:id="@+id/labelDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Date + Time:"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/heroImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/valueDateTime"
                app:layout_goneMarginEnd="8dp"/>

            <TextView
                android:id="@+id/valueDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 29, 3:30â€”3:30PM"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/labelDateTime"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Fees -->
            <TextView
                android:id="@+id/labelFees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fees:"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelDateTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/valueFees"/>

            <TextView
                android:id="@+id/valueFees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/labelFees"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Lottery Draw Date -->
            <TextView
                android:id="@+id/labelDrawDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lottery Draw Date:"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelFees"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/valueDrawDate"/>

            <TextView
                android:id="@+id/valueDrawDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 17, 3:30PM"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/labelDrawDate"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Amount in Lottery -->
            <TextView
                android:id="@+id/labelAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Amount in Lottery:"
                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/labelDrawDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/valueAmount"/>

            <TextView
                android:id="@+id/valueAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 currently in lottery"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@id/labelAmount"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="SmallSp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccept"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:text="Accept Invitation"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/labelAmount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:backgroundTint="@color/teal_200"
                tools:backgroundTint="#35C759" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLeaveWaitlist"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Leave Waitlist"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/btnAccept"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:backgroundTint="@android:color/black"
                app:iconTint="@android:color/white"
                android:textColor="@android:color/white"/>

            <!-- Bottom spacer so buttons never hide behind the nav bar -->
            <Space
                android:layout_width="0dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/btnLeaveWaitlist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
