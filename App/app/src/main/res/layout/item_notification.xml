    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="12sp"
        android:textColor="#666"
        android:paddingTop="2dp" />

</LinearLayout>
