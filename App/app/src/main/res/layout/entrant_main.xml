<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/entrant_main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.EntrantMainFragment">

    <!-- AppBar: search bar and segmented buttons -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:elevation="0dp">

        <!-- Search bar (M3) -->

        <!-- Segmented controls (M3 buttons already) -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/entrant_toggle_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_profile"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_my_events"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Events" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_my_waitlists"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="My Waitlists" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable body -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/entrant_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/entrant_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="24dp">

            <!-- Hero banner (M3 card) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/entrant_hero_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:cardElevation="6dp"
                app:strokeColor="?attr/colorOutline"
                app:strokeWidth="1dp">

                <ImageView
                    android:id="@+id/entrant_hero_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hockey_ex" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Upcoming events section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="4dp">

                <TextView
                    android:id="@+id/entrant_title_upcoming"
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Events"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                <ImageButton
                    android:id="@+id/entrant_btn_upcoming_more"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="See all upcoming"
                    app:srcCompat="@drawable/ic_search_24" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/entrant_rv_upcoming"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:clipToPadding="false"
                android:paddingBottom="12dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_event_image" />

            <!-- Waitlists section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/entrant_title_waitlists"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Waitlists"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

                <ImageButton
                    android:id="@+id/entrant_btn_waitlists_more"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="See all wait-lists"
                    app:srcCompat="@drawable/ic_search_24" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/entrant_rv_waitlists"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
