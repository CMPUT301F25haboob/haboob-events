<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Back button (top right) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button_edit_poster"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="BACK"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/purple_500"
        app:cornerRadius="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        />

    <!-- Current Poster label -->
    <TextView
        android:id="@+id/current_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Poster"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentStart="true"/>

    <!-- Poster Image with rounded corners -->
    <ImageView
        android:id="@+id/poster_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="Current event poster"
        android:padding="0dp"
        android:layout_below="@id/current_poster"
        android:layout_above="@id/change_poster_button"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Change Poster button fixed at bottom -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/change_poster_button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="CHANGE POSTER"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        app:backgroundTint="@color/purple_500"
        app:cornerRadius="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        />

</RelativeLayout>
