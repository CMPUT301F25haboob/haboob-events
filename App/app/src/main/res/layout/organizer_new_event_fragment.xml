<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Event Title -->
    <EditText
        android:id="@+id/event_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Event Title *"
        android:inputType="textCapSentences"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Event Details -->
    <EditText
        android:id="@+id/event_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Event Details *"
        android:layout_marginTop="8dp"
        android:inputType="textCapSentences"
        app:layout_constraintTop_toBottomOf="@+id/event_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Event Capacity -->
    <EditText
        android:id="@+id/num_selected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Event Capacity *"
        android:inputType="number"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/event_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Optional Signup Restriction -->
    <EditText
        android:id="@+id/num_allowed_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Optional: Restrict Signup"
        android:inputType="number"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/num_selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Start Date Calendar -->
    <CalendarView
        android:id="@+id/start_date"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/num_allowed_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/end_date"
        android:layout_marginEnd="8dp" />

    <!-- End Date Calendar -->
    <CalendarView
        android:id="@+id/end_date"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/num_allowed_signup"
        app:layout_constraintStart_toEndOf="@+id/start_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Start Label -->
    <TextView
        android:id="@+id/start_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Date *"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/start_date"
        app:layout_constraintStart_toStartOf="@+id/start_date"
        app:layout_constraintEnd_toEndOf="@+id/start_date" />

    <!-- End Label -->
    <TextView
        android:id="@+id/end_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="End Date *"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/end_date"
        app:layout_constraintStart_toStartOf="@+id/end_date"
        app:layout_constraintEnd_toEndOf="@+id/end_date" />

    <!-- Geo Data Switch -->
    <Switch
        android:id="@+id/geo_data_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geo Data"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/start_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Row for Upload + Tags -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/geo_data_required"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/upload_picture_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload Poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tags_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"
            />


        <Button
            android:id="@+id/tags_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select Tags"
            app:layout_constraintStart_toEndOf="@+id/upload_picture_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom row with Back + Create Event -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/button_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/confirm_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
