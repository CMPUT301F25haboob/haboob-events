<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Read status indicator -->
        <View
            android:id="@+id/view_admin_notif_read_status"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/purple_500" />

        <!-- Notification content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Recipient info -->
            <TextView
                android:id="@+id/tv_admin_notif_recipient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To: User Name"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <!-- Message -->
            <TextView
                android:id="@+id/tv_admin_notif_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification message"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <!-- Event ID -->
            <TextView
                android:id="@+id/tv_admin_notif_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event: event_id"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="4dp" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/tv_admin_notif_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jan 1, 2025 12:00 PM"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
